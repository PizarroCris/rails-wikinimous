<div class="container my-4">

  <div class="col-md-8 mx-auto">
    <% @articles.each do |article| %>
      <article class="mb-3 pb-3 border-bottom">
        <h2 class="text-start">
          <%= link_to article.title, article_path(article), class: "text-decoration-none" %>
        </h2>
        <p class="text-start">
          <%= article.content %>
        </p>
      </article>
    <% end %>
  </div>
</div>
